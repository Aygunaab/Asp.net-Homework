@model Layout
@{
    ViewData["Title"] = "Create";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Create New Layout</h4>
                        <p class="card-description">
                            Basic form layout
                        </p>
                        <form class="forms-sample" method="post" asp-controller="layout" asp-action="create" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="exampleInputUsername1">Logo</label>
                                <input accept="image/*" asp-for="LogoFile" class="form-control" id="exampleInputUsername1" placeholder="Logo">
                                <span asp-validation-for="LogoFile" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Instagram</label>
                                <input asp-for="InstagramUrl" class="form-control" id="exampleInputUsername1" placeholder="Instagram">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Facebook</label>
                                <input asp-for="FacebookUrl" class="form-control" id="exampleInputUsername1" placeholder="Faceboo">
                                <span asp-validation-for="FacebookUrl" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                            <span asp-validation-for="InstagramUrl" class="text-danger"></span>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationPartial" />
}