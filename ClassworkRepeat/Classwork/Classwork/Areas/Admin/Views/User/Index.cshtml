
@model List<UserVM>

@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Category List</h4>

                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            FullName
                                        </th>
                                        <th>
                                            UserName
                                        </th>
                                        <th>
                                           Roles
                                        </th>
                                        <th>
                                            Actions
                                        </th>


                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr class="table-info">
                                        
                                        <td>
                                            @item.FullName
                                        </td>
                                        <td>
                                            @item.UserName
                                        </td>
                                        <td>
                                            @item.Roles
                                        </td>
                                        <td>
                                            <a class="btn btn-primary" asp-controller="user" asp-action="GetRoles" asp-route-id="@item.Id">manage Roles</a> <a class="btn btn-secondary" asp-controller="Category" asp-action="update" asp-route-id="@item.Id">Change Password</a>
                                            <a class="btn btn-danger" asp-controller="category" asp-action="delete" asp-route-id="@item.Id">Block</a>
                                        </td>

                                    </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


